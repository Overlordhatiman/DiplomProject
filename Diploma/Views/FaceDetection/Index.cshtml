
@{
    ViewBag.Title = "View";
}

<h2>Face detection</h2>

@using (Html.BeginForm("Detect", "FaceDetection", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <label>Upload image for detection</label>
    <div class="col-md-10">
        <input type="file" name="uploadImage" />
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Detect" class="btn btn-default" />
        </div>
    </div>
}

